<!-- table -->
<div class="card shadow mb-4 mt-3 ">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Data Item</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Category</th>
            <th>Price</th>
            <th>City</th>
            <th>Country</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Category</th>
            <th>Price</th>
            <th>City</th>
            <th>Country</th>
            <th>Actions</th>
          </tr>
        </tfoot>
        <tbody>
          <% items.forEach((item,i)=> { %>
            <tr>

              <td>
                <%= i+1 %>
              </td>
              <td>
                <%= item.title %>
              </td>
              <td>
                <%= item.category.name %>
              </td>
              <td>
                <%= new Intl.NumberFormat('en-US', { style: 'currency' , currency: 'USD' }).format(item.price) %>
              </td>
              <td>
                <%= item.city %>
              </td>
              <td>
                <%= item.country %>
              </td>
              <td>
                <a href="/item/<%= item._id %>" class="btn btn-sm btn-info btn-sm">Detail</a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>