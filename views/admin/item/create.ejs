<% include ../../partials/header %>

  <% include ../../partials/sidebar %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ../../partials/navbar %>

          <!-- Begin Page Content -->
          <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row d-flex align-items-center">
              <div class="col-md-6">
                <h1 class="h3 text-gray-800">Add Form Item</h1>
              </div>
              <div class="col-md-6">
                <ol class="breadcrumb bg-transparent d-flex justify-content-md-end">
                  <li class="breadcrumb-item "><a href="/" class="text-decoration-none">Home</a></li>
                  <li class="breadcrumb-item"><a href="/item" class="text-decoration-none">Item</a></li>
                  <li class="breadcrumb-item active">Add Item</li>
                </ol>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 card shadow-lg">
                <% if (typeof errors!='undefined' ) { %>
                  <div class="alert alert-danger mb-0 mt-2" role="alert">
                    <% errors.forEach(error=> { %>
                      <p class="m-0 text-black font-weight-bolder">
                        <%= error.msg %> !
                      </p>
                      <% }) %>
                  </div>
                  <% } %>
                    <% include add-item %>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <% include ../../partials/footer %>

    </div>
    <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->


    <% include ../../partials/end %>