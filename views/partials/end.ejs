<script>
  // IMG PREVIEW 
  const inputImage = document.querySelector('#imgInput');
  const imgPreview = document.querySelector('#imgPreview')
  if (inputImage) {
    inputImage.addEventListener('change', (e) => {
      const img = e.target.files[0];
      imgPreview.setAttribute('src', URL.createObjectURL(img))

    })
  }
  // IMG PREVIEW ITEMS
  const imgItems = document.querySelector('#imgItems');
  const itemsImgPreview = document.querySelector('.itemsImgPreview')
  imgItems.addEventListener('change', (e) => {
    for (let i = 0; i < e.target.files.length; i++) {
      const img = document.createElement('img');
      img.setAttribute('src', URL.createObjectURL(e.target.files[i]))
      img.style.width = '100px'
      img.style.height = '100px'
      img.classList.add('mr-2')
      itemsImgPreview.appendChild(img)
    }
  })
</script>


